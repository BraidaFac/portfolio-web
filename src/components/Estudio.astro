---
interface Props {
  degree: string;
  institute:string;
  start_date: string;
  end_date: string;
}

 const {degree, institute, start_date, end_date} = Astro.props;
---

<div class="flex flex-col items-start">
  <div class="flex flex-row gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" 
    class="icon icon-tabler icon-tabler-school" width="30" height="30" viewBox="0 0 24      24" stroke-width="2" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M22 9l-10 -4l-10 4l10 4l10 -4v6"></path>
      <path d="M6 10.6v5.4a6 3 0 0 0 12 0v-5.4"></path>
    </svg>
    <p class="text-2xl italic">{institute}</p>
  </div>
  <div>
    <p class="text-xl text-gray-500 ml-10">{degree}</p>
  </div>
  <div>
    <p class="text-xl text-gray-600 ml-10">{start_date} - {end_date}</p>
  </div>

</div>
